<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.PrimaryController">
   <center>
      <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <VBox alignment="BOTTOM_CENTER" minHeight="100.0" prefHeight="100.0" prefWidth="100.0" StackPane.alignment="BOTTOM_CENTER">
            <StackPane.margin>
               <Insets />
            </StackPane.margin>
            <MediaView fx:id="mediaView" fitHeight="200.0" fitWidth="200.0" />
            <Slider fx:id="progressBar">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" />
               </VBox.margin>
            </Slider>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <Button onAction="#chooseFileMethod" text="Choose File">
                  <HBox.margin>
                     <Insets left="10.0" right="3.0" top="7.0" />
                  </HBox.margin>
               </Button>
               <Button mnemonicParsing="false" onAction="#play" text="Play">
                  <HBox.margin>
                     <Insets left="3.0" right="3.0" top="7.0" />
                  </HBox.margin>
               </Button>
               <Button mnemonicParsing="false" onAction="#pause" text="Pause">
                  <HBox.margin>
                     <Insets left="3.0" right="3.0" top="7.0" />
                  </HBox.margin>
               </Button>
               <Button mnemonicParsing="false" onAction="#stop" text="Stop">
                  <HBox.margin>
                     <Insets left="3.0" right="3.0" top="7.0" />
                  </HBox.margin>
               </Button>
               <Button mnemonicParsing="false" onAction="#slowRate" text="&lt;&lt;&lt;">
                  <HBox.margin>
                     <Insets left="3.0" right="3.0" top="7.0" />
                  </HBox.margin>
               </Button>
               <Button mnemonicParsing="false" onAction="#fastForward" text="&gt;&gt;&gt;">
                  <HBox.margin>
                     <Insets left="3.0" right="3.0" top="7.0" />
                  </HBox.margin>
               </Button>
               <Button mnemonicParsing="false" onAction="#back10" text="-10s">
                  <HBox.margin>
                     <Insets left="3.0" right="3.0" top="7.0" />
                  </HBox.margin>
               </Button>
               <Button mnemonicParsing="false" onAction="#skip10" text="+10s">
                  <HBox.margin>
                     <Insets left="3.0" right="5.0" top="7.0" />
                  </HBox.margin>
               </Button>
               <Slider fx:id="volumeSlider" />
            </HBox>
         </VBox>
      </StackPane>
   </center>
</BorderPane>
